<h2>Daily Stock Report</h2>

<p>Hello <%= @retailer.name %>,</p>

<% if @low_stock.present? %>
  <h3>Low Stock Items:</h3>
  <ul>
    <% @low_stock.each do |item| %>
      <li>
        <%= item.name %> - Remaining: <%= item.quantity %>
      </li>
    <% end %>
  </ul>
<% end %>

<% if @out_of_stock.present? %>
  <h3>Out of Stock Items:</h3>
  <ul>
    <% @out_of_stock.each do |item| %>
      <li>
        <%= item.name %>
      </li>
    <% end %>
  </ul>
<% end %>

<p>Please restock your items soon.</p>